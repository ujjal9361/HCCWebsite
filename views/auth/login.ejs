<h1>This is login form</h1>
<p><%=typeof flashMessage!=='undefined'?flashMessage:""%></p>
<form action="/login" method="post">
    <div class="form-row">
        <label for="email">Email</label>
        <br/>
        <input type='email' required name="email" id="email" value="<%=locals.email?locals.email:""%>">
    </div>
    
    <div class="form-row">
        <label for="password">Password</label>
        <br/>
        <input type='password' required name="password" id="password" value="<%=locals.password?locals.password:""%>">
    </div>
    <button type="submit">LogIn</button>
</form>
<a href="/signup">SignUp instead</a>